From 10e00d14c58fd8a96e4484f461fe65b986c1cb68 Mon Sep 17 00:00:00 2001
From: Jack Baron <jackmbaron@gmail.com>
Date: Wed, 21 Jul 2021 03:01:05 +0100
Subject: [PATCH] feat: use npm registry

---
 .yarnrc    | 2 ++
 Dockerfile | 2 +-
 2 files changed, 3 insertions(+), 1 deletion(-)
 create mode 100644 .yarnrc

diff --git a/.yarnrc b/.yarnrc
new file mode 100644
index 00000000..32c73870
--- /dev/null
+++ b/.yarnrc
@@ -0,0 +1,2 @@
+registry "https://registry.npmjs.org/"
+network-timeout 600000
diff --git a/Dockerfile b/Dockerfile
index 255d09ac..6954c01d 100644
--- a/Dockerfile
+++ b/Dockerfile
@@ -4,7 +4,7 @@ FROM node:14-alpine AS deps-common
 
 ARG APP_PATH
 WORKDIR $APP_PATH
-COPY ./package.json ./yarn.lock ./
+COPY ./package.json ./yarn.lock ./.yarnrc ./
 
 # ---
 FROM deps-common AS deps-dev
